<main class="register-screen wf-roundedmplus1c">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity3">
        <h1 class="R-TitleName text-center"><strong>カテゴリー登録</strong></h1>
        <h5 class="text-center" style="margin-bottom: 75px;">研究者の時間は、研究の為に・・・</h5>
        <div class="container-fluid">        <!-- 全体を囲むコンテナ -->
          <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-10">
              <%= form_for :name do |f|%>
                <div class="form-group form-row mb-4">
                  <%= f.label :name, "カテゴリー名", class: "col-md-2 col-form-label text-md-left" %><br />
                  <div class="col-md-6">
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row">
                <%= f.submit "カテゴリーを追加", class: "btn btn-outline-primary", style: "margin-bottom: 50px; display: block; margin: auto;" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>                <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>