<main class="register-screen wf-roundedmplus1c">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity3">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-0"></div>
              <div class="col-md-10">
                <h1 class="text-center"><i class="fas fa-school" style="margin-right: 10px;"></i><strong>新規研究室登録</strong></h1>
                <h5 class="text-center" style="margin-bottom: 75px;"></h5>
              </div>
            </div>
          </div>
        <div class="container-fluid">        <!-- 全体を囲むコンテナ -->
          <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-10">
              <form>
                <div class="form-group form-row mb-4">
                  <label class="col-md-2 col-form-label text-md-left" for="Q_Name">大学名</label>
                  <div class="col-md-6">
                    <input type="text" class="form-control" id="Q_Name">
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <label class="col-md-2 col-form-label text-md-left" for="Q_University">学部名</label>
                  <div class="col-md-6">
                    <input type="text" class="form-control" id="Q_Name">
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <label class="col-md-2 col-form-label text-md-left" for="Q_Department">学科名</label>
                  <div class="col-md-6">
                    <input type="text" class="form-control" id="Q_Name">
                  </div>
                </div>
                <div class="form-group form-row mb-5">
                  <label class="col-md-2 col-form-label text-md-left" for="Q_Password">研究室名</label>
                  <div class="col-md-6">
                    <input type="email" class="form-control" id="Q_Mail">
                  </div>
                </div>
              </form>
            </div>
            <form class="form-group form-row">
              <button class="btn btn-SignUp">
                <%= link_to "登録する", '/',class: 'btn-Atag' %>
              </button>
            </form>
          </div>
        </div>                <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>


