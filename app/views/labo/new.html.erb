<main class="register-screen wf-roundedmplus1c">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity3">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-0"></div>
              <div class="col-md-10">
                <h1 class="text-center"><i class="fas fa-school" style="margin-right: 10px;"></i><strong>新規研究室登録</strong></h1>
                <h5 class="text-center" style="margin-bottom: 75px;"></h5>
              </div>
            </div>
          </div>
        <div class="container-fluid">        <!-- 全体を囲むコンテナ -->
          <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-10">
              <%= form_for @affiliation do |f| %>
                <%= render 'shared/error_messages' %>
                <div class="form-group form-row mb-4">
                  <%= f.label :university, '大学名', class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :university, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :department, "学部名", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :department, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :course, "学科名", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :course, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :labo, "研究室名", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :labo, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-5">
                  <%= f.label :labo, "研究室記号", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :labo, class: "form-control" %>
                  </div>
                  ※研究室記号（8文字以上の半角英数）を決めてください。
                </div>
              <% end %>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-12">
              <%= form_for @affiliation do |f| %>
                <div class="form-group form-row">
                <%= f.submit "登録する", class: "btn btn-outline-primary", style: "margin-bottom: 50px; display: block; margin: auto;" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>                <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>











