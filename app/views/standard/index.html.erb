<main class="CustomList-screen wf-roundedmplus1c">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity1" style="padding-top: 100px;">
      <div class="container">        <!-- 全体を囲むコンテナ -->
  <h2 class="my-5"><img src="/assets/Admin/result.png" style="margin-right: 10px;">テンプレートプロトコル</h2>

  <div class="d-sm-flex flex-wrap text-black">
    <%= @protocols.each do |protocol| %>
      <div class="bg-info p-3 mb-2 mr-sm-2 Custom-Box">
        <%= link_to protocol_path(id: protocol.id), class: "A-Tag" do %>
          <div class="A-TagEffect">
            <h5>プロトコル名：<%= protocol.title %></h5>
            <p class="mb-0">作成日時：<%= protocol.created_at.strftime('%Y/%m/%d') %></p>
            <p class="mb-0">作成者名：<%= user_name(protocol.user) %></p>
            <p class="mb-0">カテゴリー名：<%= protocol.category.category_name %></p>
          </div>
        <% end %>
      </div>
    <% end%>
    <%= paginate @protocols %>
  </div>

</div>        <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>
