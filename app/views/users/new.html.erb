<main class="register-screen wf-roundedmplus1c">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity3">
        <h1 class="R-TitleName text-center"><strong>Researchable</strong></h1>
        <h5 class="text-center" style="margin-bottom: 75px;">研究者の時間は、研究の為に・・・</h5>
        <div class="container-fluid">        <!-- 全体を囲むコンテナ -->
          <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-10">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="form-group form-row mb-4">
                  <%= f.label :first_name, "姓", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :first_name, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :last_name, "名", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.text_field :last_name, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :email, "メールアドレス", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :password, "パスワード", class: "col-md-2 col-form-label text-md-left" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %>文字以上の半角英数字を入力してください。)</em>
                  <% end %><br />
                  <div class="col-md-6">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-4">
                  <%= f.label :password_confirmation, "パスワードの確認", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row mb-5">
                  <%= f.label :password_confirmation, "パスワードの確認", class: "col-md-2 col-form-label text-md-left" %>
                  <div class="col-md-6">
                    <%= f.password_field :labo_pass, class: "form-control" %>
                  </div>
                </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-group form-row">
                  <%= f.submit "新規登録", class: "btn btn-outline-primary", style: "margin-bottom: 50px; display: block; margin: auto;" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>                <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>
