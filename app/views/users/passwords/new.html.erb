
<main class="Login-screen">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity5">
        <div class="container-fluid wf-roundedmplus1c">        <!-- 全体を囲むコンテナ -->
          <h1 class="R-TitleName text-center"><strong>Researchable</strong></h1>
          <h5 class="text-center" style="margin-bottom: 75px;">研究者の時間は、研究の為に・・・</h5>
          <h2 class="text-center" style="margin-bottom: 75px;">パスワードの再発行</h2>
          <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-10">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>
                <div class="form-group form-row">
                  <%= f.label :email, "メールアドレス", class: "col-md-2 col-form-label text-md-left mb-4" %><br />
                  <div class="col-md-6">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-9 text-center">
                    <%= f.submit "パスワードの再発行をする", class: "btn btn-outline-primary", style: "margin-right: 75px;" %>
                  </div>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>                <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>