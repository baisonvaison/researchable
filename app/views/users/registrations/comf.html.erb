
<main class="register-screen wf-roundedmplus1c">
  <article>
    <section id="BGP-researchable">
      <div class="BGP-Opacity3">
        <h1 class="R-TitleName text-center"><strong>Researchable</strong></h1>
        <h5 class="text-center" style="margin-bottom: 75px;">研究者の時間は、研究の為に・・・</h5>
        <div class="container-fluid">        <!-- 全体を囲むコンテナ -->
          <div class="row justify-content-center">
            <div class="col-2"></div>
            <div class="col-10">
              <%= form_tag comf_path do %>
                <div class="form-group form-row mb-4">
                  <%= label :labo_pass, "研究室パスワード", class: "col-md-2 col-form-label text-md-left" %><br />
                  <div class="col-md-6">
                    <%= text_field :labo_pass, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group form-row">
                <%= submit_tag "研究室を確認", class: "btn btn-outline-primary", style: "margin-bottom: 50px; display: block; margin: auto;" %>
                </div>
              <% end %>
            </div>
            <%= render "users/shared/links" %>
          </div>
        </div>                <!-- 全体を囲むコンテナ -->
      </div>
    </section>
  </article>
</main>